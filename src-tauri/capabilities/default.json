{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "adb",
          "cmd": "adb",
          "args": true
        },
        {
          "name": "fastboot",
          "cmd": "fastboot",
          "args": true
        }
      ]
    }
  ]
}